@model IEnumerable<dynamic>
@{
    var top = Model.First();
}

@if (Model.Any())
{
    <h2 class="mb-4">Наиболее вероятное направление</h2>
    <div class="alert alert-primary">
        <strong>@top.Diagnosis</strong> — вероятность @top.Probability:P2
    </div>
}
else
{
    <h3>Не удалось определить подходящую страну</h3>
}

<h4>Распределение вероятностей</h4>
<table class="table">
    <thead><tr><th>Страна</th><th>p</th></tr></thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.Diagnosis</td>
                <td>@d.Probability:P2</td>
            </tr>
        }
    </tbody>
</table>
