<?xml version="1.0" encoding="utf-8"?>
<items>

  <!-- A. КЛИМАТ -->
  <item id="A"
        content="Какой климат вы предпочитаете для отдыха?"
        type="vertical_radio"
        displayName="Климат">
    <variants>
      <variant content="Тёплый/жаркий"/>
      <variant content="Умеренный"/>
      <variant content="Холодный"/>
      <variant content="Без разницы"/>
    </variants>
  </item>

  <!-- B. ТИП ОТДЫХА (показывается если A = Тёплый/жаркий или Умеренный) -->
  <item id="B"
        parent="A"
        visibleIf="Тёплый/жаркий,Умеренный"
        content="Какой тип отдыха вам ближе?"
        type="vertical_radio"
        displayName="Тип отдыха">
    <variants>
      <variant content="Пляжный"/>
      <variant content="Экскурсионный / культурный"/>
      <variant content="Природный / экотуризм"/>
      <variant content="Городской (шопинг, развлечения)"/>
      <variant content="Без разницы"/>
    </variants>
  </item>

  <!-- C. ГОРНОЛЫЖНЫЙ (показывается если A = Холодный) -->
  <item id="C"
        parent="A"
        visibleIf="Холодный"
        content="Интересует ли вас горнолыжный отдых?"
        type="vertical_radio"
        displayName="Горнолыжный">
    <variants>
      <variant content="Да, хочу кататься"/>
      <variant content="Нет"/>
    </variants>
  </item>

  <!-- D. ПОБЕРЕЖЬЕ (логично выводить только если в B выбран Пляжный) -->
  <item id="D"
        parent="B"
        visibleIf="Пляжный"
        content="Нужен ли вам выход к морю или океану?"
        type="vertical_radio"
        displayName="Побережье">
    <variants>
      <variant content="Да, обязательно море"/>
      <variant content="Желательно, но не критично"/>
      <variant content="Не важно"/>
    </variants>
  </item>

  <!-- E. ГОРЫ -->
  <item id="E"
        content="Важно ли наличие гор поблизости?"
        type="vertical_radio"
        displayName="Горы">
    <variants>
      <variant content="Да"/>
      <variant content="Не важно"/>
      <variant content="Нет"/>
    </variants>
  </item>

  <!-- F. ПУСТЫНЯ -->
  <item id="F"
        content="Хотите увидеть пустынные пейзажи?"
        type="vertical_radio"
        displayName="Пустыня">
    <variants>
      <variant content="Да"/>
      <variant content="Не важно"/>
      <variant content="Нет"/>
    </variants>
  </item>

  <!-- G. ПРИРОДА / ЭКО -->
  <item id="G"
        content="Насколько вам интересны природные достопримечательности (парки, водопады, джунгли)?"
        type="vertical_radio"
        displayName="Природа / эко">
    <variants>
      <variant content="Очень интересны"/>
      <variant content="Средней важности"/>
      <variant content="Не важно"/>
    </variants>
  </item>

  <!-- H. ГОРОДСКИЕ РАЗВЛЕЧЕНИЯ -->
  <item id="H"
        content="Насколько важны крупные города с развитым шопингом и развлечениями?"
        type="vertical_radio"
        displayName="Городские развлечения">
    <variants>
      <variant content="Очень важны"/>
      <variant content="Желательны"/>
      <variant content="Не важно"/>
    </variants>
  </item>

  <!-- I. БЮДЖЕТ -->
  <item id="I"
        content="Какой ориентировочный бюджет на поездку?"
        type="vertical_radio"
        displayName="Бюджет">
    <variants>
      <variant content="Минимальный (доступные направления)"/>
      <variant content="Средний"/>
      <variant content="Высокий (дорогие страны)"/>
    </variants>
  </item>

  <!-- J. ВИЗА -->
  <item id="J"
        content="Готовы ли вы оформлять сложную визу?"
        type="vertical_radio"
        displayName="Визовые требования">
    <variants>
      <variant content="Нужен безвиз или e‑Visa"/>
      <variant content="Готов оформить Шенген / другую сложную визу"/>
      <variant content="Не важно"/>
    </variants>
  </item>

  <!-- K. РЕЛИГИОЗНЫЕ ОГРАНИЧЕНИЯ -->
  <item id="K"
        content="Насколько для вас критичны строгие религиозные ограничения?"
        type="vertical_radio"
        displayName="Религиозные нормы">
    <variants>
      <variant content="Не хочу строгих ограничений"/>
      <variant content="Нейтрально"/>
      <variant content="Не важно"/>
    </variants>
  </item>

  <!-- L. АНГЛИЙСКИЙ ЯЗЫК -->
  <item id="L"
        content="Важно ли, чтобы местные жители говорили по‑английски?"
        type="vertical_radio"
        displayName="Английский язык">
    <variants>
      <variant content="Очень важно"/>
      <variant content="Желательно"/>
      <variant content="Не важно"/>
    </variants>
  </item>

  <!-- M. ЛОЯЛЬНОСТЬ К РУССКОЯЗЫЧНЫМ -->
  <item id="M"
        content="Нужна ли дружелюбная среда к русскоязычным туристам?"
        type="vertical_radio"
        displayName="Лояльность к русскоязычным">
    <variants>
      <variant content="Да, это важно"/>
      <variant content="Желательно"/>
      <variant content="Не важно"/>
    </variants>
  </item>

</items>